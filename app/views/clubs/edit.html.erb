<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2 class="text-center"> Please complete your profile </h2>

      <%= simple_form_for [current_user, @club] do |f| %>
        <%= f.input :name %>
        <%= f.input :street %>
        <%= f.input :street_number %>
        <%= f.input :city %>
        <%= f.input :zip %>
        <%= f.input :description %>
        <%= f.input :photo%>
        <%= f.input :photo_cache, as: :hidden %>

        <div class="form-actions text-center">
          <%= f.button :submit, "Confirm", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
